{
  "name": "vscode-twitch-authprovider",
  "displayName": "Twitch Authentication Provider",
  "description": "Twitch Authentication Provider for VS Code",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "clarkio",
  "preview": true,
  "main": "./out/extension.js",
  "activationEvents": [],
  "capabilities": {
    "virtualWorkspaces": true
  },
  "contributes": {
    "authentication": [
      {
        "id": "twitch",
        "label": "Twitch"
      }
    ],
    "commands": [
      {
        "command": "vscode-twitch-authprovider.signIn",
        "title": "Sign in",
        "category": "Twitch",
        "icon": "$(sign-in)"
      },
      {
        "command": "vscode-twitch-authprovider.signOut",
        "title": "Sign out",
        "category": "Twitch",
        "icon": "$(sign-out)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "rimraf out && copyfiles -au 1 ./src/login/* out/ && esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "build": "npm run esbuild",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test-compile": "tsc -p ./",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^11.0.1",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/node-fetch": "^2.6.4",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.17.19",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "rimraf": "^5.0.0",
    "semantic-release": "^21.0.2",
    "semantic-release-stop-before-publish": "^1.0.0",
    "semantic-release-vsce": "^5.5.9",
    "typescript": "^5.0.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clarkio/vscode-authentication-twitch.git"
  },
  "vsce": {
    "pre-release": true
  },
  "dependencies": {
    "node-fetch": "^2.6.11"
  }
}

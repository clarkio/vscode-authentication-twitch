{
  "rules": [
    {
      "id": "@secretlint/secretlint-rule-preset-recommend"
    },
    {
      "id": "@secretlint/secretlint-rule-pattern",
      "options": {
        "patterns": [
          {
            "name": "no passwords",
            "pattern": "/(password|pass)(\\s+)?(=|:)/gi"
          },
          {
            "name": "no keys",
            "pattern": "/(?<!:)(?<!row-)(?<!<.*)(key(\\s+)?(=|:))/gi"
          },
          {
            "name": "no tokens",
            "pattern": "/(token(\\s+)?(=|:))/gi"
          },
          {
            "name": "no secrets",
            "pattern": "/(secret(\\s+)?(=|:))/gi"
          }
        ]
      }
    }
  ]
}
